{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('ROLE_USER') %}
        <h3>Profile</h3>
        <hr>
        <p>Name: {{ user.firstname }} {{ user.lastname }}</p>
        <p>Email: {{ user.email }}</p>
        <img class="img-thumbnail" style="height: 150px; width: 150px;" src="{{ asset('images/'~ user.email ~'/'~ user.image ) }}">
            <hr>
    {% endif %}
{% endblock %}